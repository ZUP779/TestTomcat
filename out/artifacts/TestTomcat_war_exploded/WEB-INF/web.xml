<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>servlet.Login</servlet-class>
        <load-on-startup>10</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListUser</servlet-name>
        <servlet-class>servlet.ListUser</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListUser</servlet-name>
        <url-pattern>/list</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddDepartment</servlet-name>
        <servlet-class>servlet.AddDepartment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddDepartment</servlet-name>
        <url-pattern>/addDep</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>listDepartment</servlet-name>
        <servlet-class>servlet.listDepartment</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>listDepartment</servlet-name>
        <url-pattern>/listDep</url-pattern>
    </servlet-mapping>
</web-app>